<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns:spring="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.mulesource.org/schema/mule/core/2.2"
  xmlns:restlet="http://www.mulesource.org/schema/mule/restlet/2.2"
  xsi:schemaLocation="
               http://restlet.apache.org http://restlet.apache.org/schemas/restlet-spring.xsd
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
               http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
               http://www.mulesource.org/schema/mule/restlet/2.2 http://www.mulesource.org/schema/mule/restlet/2.2/mule-restlet.xsd">

  <model name="testModel">

    <service name="customerService">
      <inbound>
        <inbound-endpoint address="http://localhost:63081" synchronous="true" />
      </inbound>
      <restlet:component restlet-ref="helloWorld"/>
    </service>
    
  </model>
  
  <spring:bean id="helloWorld" class="org.mule.transport.restlet.hello.HelloWorldApplication"/>
  
</mule>